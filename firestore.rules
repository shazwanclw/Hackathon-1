rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthed()
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.enabled == true;
    }

    function isShelter() {
      return isAuthed()
        && exists(/databases/$(database)/documents/shelters/$(request.auth.uid))
        && get(/databases/$(database)/documents/shelters/$(request.auth.uid)).data.enabled == true;
    }

    match /admins/{uid} {
      allow read: if isAuthed() && request.auth.uid == uid;
      allow create, update, delete: if false;
    }

    match /shelters/{uid} {
      allow get: if isAdmin() || (isAuthed() && request.auth.uid == uid);
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /adoption_posts/{postId} {
      allow get, list: if true;
      allow create: if (isAdmin() || isShelter())
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.createdByEmail is string
        && request.resource.data.shelterUid is string
        && request.resource.data.shelterName is string
        && request.resource.data.petName is string
        && request.resource.data.petType is string
        && request.resource.data.ageText is string
        && request.resource.data.description is string
        && request.resource.data.photoUrl is string
        && request.resource.data.photoPath is string
        && request.resource.data.contactEmail is string
        && request.resource.data.phone is string
        && request.resource.data.address is string
        && request.resource.data.status is string;
      allow update, delete: if isAdmin() || (isShelter() && resource.data.createdBy == request.auth.uid);
    }

    match /cases/{caseId} {
      allow create: if true
        && request.resource.data.createdBy is string
        && request.resource.data.trackingToken is string
        && request.resource.data.status == 'new';
      allow get, list, update, delete: if isAdmin();
    }

    match /public_tracks/{trackId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.status == 'new';
      allow get: if true;
      allow list: if false;
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /public_map_cases/{caseId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.status is string;
      allow get, list: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /animals/{animalId} {
      allow get, list: if true;
      allow create: if isAuthed()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.type is string
        && request.resource.data.coverPhotoUrl is string
        && request.resource.data.sightingCount is int;
      allow update: if isAdmin() || (isAuthed() && resource.data.createdBy == request.auth.uid);
      allow delete: if isAdmin() || (isAuthed() && resource.data.createdBy == request.auth.uid);

      match /sightings/{sightingId} {
        allow get, list: if true;
        allow create: if isAuthed()
          && request.resource.data.authorUid == request.auth.uid
          && request.resource.data.animalId == animalId
          && request.resource.data.photoUrl is string;
        allow update, delete: if isAuthed() && resource.data.authorUid == request.auth.uid;

        match /comments/{commentId} {
          allow get, list: if true;
          allow create: if isAuthed()
            && request.resource.data.authorUid == request.auth.uid
            && request.resource.data.content is string;
          allow update, delete: if isAuthed() && resource.data.authorUid == request.auth.uid;
        }
      }

      match /likes/{uid} {
        allow get, list: if true;
        allow create: if isAuthed()
          && request.auth.uid == uid
          && request.resource.data.uid == request.auth.uid;
        allow delete: if isAuthed() && request.auth.uid == uid;
        allow update: if false;
      }

      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isAuthed()
          && request.resource.data.authorUid == request.auth.uid
          && request.resource.data.content is string;
        allow delete: if (isAuthed() && resource.data.authorUid == request.auth.uid) || isAdmin();
        allow update: if false;
      }
    }

    match /users/{uid} {
      allow get, list: if true;
      allow create, update: if isAuthed() && request.auth.uid == uid;
      allow delete: if false;
    }

    match /follows/{followId} {
      allow get, list: if true;
      allow create: if isAuthed()
        && request.resource.data.followerUid == request.auth.uid
        && request.resource.data.followingUid is string
        && request.resource.data.followerUid != request.resource.data.followingUid;
      allow delete: if isAuthed() && resource.data.followerUid == request.auth.uid;
      allow update: if false;
    }

    match /lost_found_posts/{postId} {
      allow get, list: if true;
      allow create: if isAuthed()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.authorEmail is string
        && request.resource.data.petName is string
        && request.resource.data.description is string
        && request.resource.data.contactInfo is string
        && request.resource.data.photoUrl is string;
      allow update, delete: if isAdmin() || (isAuthed() && resource.data.createdBy == request.auth.uid);
    }

    match /lost_found_match_history/{historyId} {
      allow create: if isAuthed()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.animalType is string
        && request.resource.data.matches is list;
      allow get, list: if isAuthed() && resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAdmin() || (isAuthed() && resource.data.createdBy == request.auth.uid);
    }

    match /case_events/{eventId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.action is string;
      allow get, list, update, delete: if isAdmin();
    }
  }
}
