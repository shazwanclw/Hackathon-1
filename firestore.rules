rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthed()
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.enabled == true;
    }

    match /admins/{uid} {
      allow read: if isAuthed() && request.auth.uid == uid;
      allow create, update, delete: if false;
    }

    match /cases/{caseId} {
      allow create: if true
        && request.resource.data.createdBy is string
        && request.resource.data.trackingToken is string
        && request.resource.data.status == 'new';
      allow get, list, update, delete: if isAdmin();
    }

    match /public_tracks/{trackId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.status == 'new';
      allow get: if true;
      allow list: if false;
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /public_map_cases/{caseId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.status is string;
      allow get, list: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /case_events/{eventId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.action is string;
      allow get, list, update, delete: if isAdmin();
    }
  }
}
