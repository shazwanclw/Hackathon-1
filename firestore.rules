rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthed()
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.enabled == true;
    }

    match /admins/{uid} {
      allow read: if isAuthed() && request.auth.uid == uid;
      allow create, update, delete: if false;
    }

    match /cases/{caseId} {
      allow create: if true
        && request.resource.data.createdBy is string
        && request.resource.data.trackingToken is string
        && request.resource.data.status == 'new';
      allow get, list, update, delete: if isAdmin();
    }

    match /public_tracks/{trackId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.status == 'new';
      allow get: if true;
      allow list: if false;
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /public_map_cases/{caseId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.status is string;
      allow get, list: if true;
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /animals/{animalId} {
      allow get, list: if true;
      allow create: if isAuthed()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.type is string
        && request.resource.data.coverPhotoUrl is string
        && request.resource.data.sightingCount is int;
      allow update, delete: if isAdmin();

      match /sightings/{sightingId} {
        allow get, list: if true;
        allow create: if isAuthed()
          && request.resource.data.authorUid == request.auth.uid
          && request.resource.data.animalId == animalId
          && request.resource.data.photoUrl is string;
        allow update, delete: if isAuthed() && resource.data.authorUid == request.auth.uid;

        match /comments/{commentId} {
          allow get, list: if true;
          allow create: if isAuthed()
            && request.resource.data.authorUid == request.auth.uid
            && request.resource.data.content is string;
          allow update, delete: if isAuthed() && resource.data.authorUid == request.auth.uid;
        }
      }
    }

    match /case_events/{eventId} {
      allow create: if true
        && request.resource.data.caseId is string
        && request.resource.data.action is string;
      allow get, list, update, delete: if isAdmin();
    }
  }
}
